<script>
document.title = "BaixoGavea.com | Adicionar Álbum"
</script>

<h1>Novo Álbum | <%=@banda.nome%></h1>

<% form_for :album, :url => { :action => "create" } do |f| %>
  <%= f.error_messages %>
  <%= hidden_field_tag("album[banda_id]", @banda.id) %>
  <p>
    <%= f.label :nome %><br />
    <%= f.text_field :nome %>
    &nbsp;&nbsp;
    <%= f.label :ano %>
    <%= f.date_select :ano,  :discard_day => true, :discard_month => true, :start_year => 1950, :end_year=>Time.now.year%>
  </p>
  <p>
    <%= f.submit 'Criar' %>
  </p>
<% end %>

  <br/>
  <%= link_to 'Voltar', banda_path(@banda) %>